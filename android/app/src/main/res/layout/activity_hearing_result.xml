<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FB"
    tools:context=".HearingActivityResult">

    <LinearLayout
        android:id="@+id/result_intro"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/resultPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/testing"
                android:textSize="18sp"
                android:fontFamily="@font/sarabun_bold"
                android:textColor="@color/text_default"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="53dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/testing_action_desc_1"
                android:textSize="14sp"
                android:fontFamily="@font/sarabun_light"
                android:textColor="@color/text_default"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="73dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/testing_action_desc_2"
                android:textSize="20sp"
                android:fontFamily="@font/sarabun_bold"
                android:textColor="@color/text_default"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="92dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/animateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_intro">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:src="@drawable/result_normalcase"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultPage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_intro">

        <ScrollView
            android:id="@+id/result_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/resultTable"
                />

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_button"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultPage">

        <Button
            android:id="@+id/doneTesting"
            android:gravity="center"
            android:onClick="onClickDone"
            android:text="@string/done_testing"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:background="@color/primary_btn_success"
            android:fontFamily="@font/sarabun_medium"
            android:textColor="@color/text_inverse"
            android:textColorHighlight="@color/text_inverse"
            android:textColorHint="@color/text_inverse"
            android:textColorLink="@color/text_inverse"
            android:textSize="18sp"
            tools:ignore="OnClick"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>