<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".HearingActivityResult">
    <LinearLayout
        android:id="@+id/result_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/result_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/toneResultHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sarabun_light"
                    android:gravity="center_horizontal"
                    android:text="เสร็จสิ้น การทดสอบการได้ยิน"
                    android:textColor="@color/text_default"
                    android:textSize="22sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/toneResultSubHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sarabun_light"
                    android:gravity="center_horizontal"
                    android:text="ผลของคุณคือ"
                    android:textColor="@color/text_default"
                    android:textSize="16sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/toneResultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sarabun_bold"
                    android:gravity="center_horizontal"
                    android:text="การได้ยิน"
                    android:textColor="@color/text_default"
                    android:textSize="24sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/animateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_intro">


            <ImageView
                android:id="@+id/resultImage"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:src="@drawable/result_badcase" />

            <TextView
                android:id="@+id/resultSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sarabun_light"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="คุณสามารถพบจักษุแพทย์ เพื่อปรึกษาและทำการทดสอบการได้ยินโดยละเอียดอีกครั้งหนึ่ง"

                android:textColor="@color/text_default"
                android:textSize="16sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intro_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animateLayout"
            app:layout_constraintVertical_bias="0.042"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/userContactButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_btn_success"
                android:fontFamily="@font/sarabun_medium"
                android:gravity="center"
                android:onClick="onClickContactInfo"
                android:text="ลงชื่อให้เจ้าหน้าที่ติดต่อกลับ"
                android:textColor="@color/text_inverse"
                android:textSize="18sp"
                tools:ignore="onClick"
                android:layout_marginBottom="7dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/tryAgainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_btn_success"
                android:fontFamily="@font/sarabun_medium"
                android:gravity="center"
                android:onClick="onClickTryAgain"
                android:text="ทดสอบอีกครั้ง"
                android:textColor="@color/text_inverse"
                android:textSize="18sp"
                tools:ignore="onClick"
                android:layout_marginBottom="7dp"
                />

            <Button
                android:id="@+id/doneTesting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:fontFamily="@font/sarabun_medium"
                android:gravity="center"
                android:onClick="onClickDone"
                android:text="@string/done_testing"
                android:textColor="@color/text_default"
                android:textSize="18sp"
                tools:ignore="OnClick" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>